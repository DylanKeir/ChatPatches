{
  "schemaVersion": 1,
  "id": "chat_patches",
  "version": "${version}",

  "name": "Chat Patches",
  "description": "A versatile client-side chat mod that makes chat more customizable, check out the config and the GitHub page for more info!",
  "authors": [
    "OBro1961"
  ],
  "contributors": [
    "FITFC (pt_br)"
  ],
  "contact": {
    "homepage": "https://curseforge.com/minecraft/mc-mods/chatpatches",
    "issues": "https://github.com/mrbuilder1961/ChatPatches/issues",
    "sources": "https://github.com/mrbuilder1961/ChatPatches"
  },

  "license": "LGPLv3",
  "icon": "assets/chatpatches/icon.png",

  "environment": "client",
  "entrypoints": {
    "preLaunch": [
      "com.llamalad7.mixinextras.MixinExtrasBootstrap::init"
    ],
    "client": [
      "obro1961.chatpatches.ChatPatches"
    ],
    "modmenu": [
      "obro1961.chatpatches.integration.ModMenuIntegration"
    ]
  },
  "mixins": [
    "chatpatches.mixins.json"
  ],

  "depends": {
    "java": ">=17",
    "minecraft": "1.19.3",
    "fabricloader": ">=0.14.12",
    "fabric": "*"
  },
  "recommends": {
    "yet-another-config-lib": "*",
    "modmenu": "*"
  },
  "suggests": {
    "nochatreports": "*"
  },
  "breaks": {
    "morechathistory": "*"
  }
}
