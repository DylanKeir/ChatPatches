{
  "schemaVersion": 1,
  "id": "wmch",
  "version": "${version}",

  "name": "Where's My Chat History",
  "description": "A versatile client-side chat mod that makes chat more customizable, check out the config and the GitHub page for more info!",
  "authors": [
    "MechanicalArcane"
  ],
  "contributors": [
    "FITFC (pt_br)"
  ],
  "contact": {
    "homepage": "https://curseforge.com/minecraft/mc-mods/wmch",
    "issues": "https://github.com/mrbuilder1961/WheresMyChatHistory/issues",
    "sources": "https://github.com/mrbuilder1961/WheresMyChatHistory"
  },

  "license": "LGPLv3",
  "icon": "assets/wmch/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "mechanicalarcane.wmch.WMCH"
    ],
    "modmenu": [
      "mechanicalarcane.wmch.integration.ModMenuIntegration"
    ]
  },
  "mixins": [
    "wmch.mixins.json"
  ],

  "depends": {
    "java": ">=17",
    "minecraft": "1.19.3",
    "fabricloader": ">=0.14.12",
    "fabric": "*"
  },
  "recommends": {
    "cloth-config": "*",
    "modmenu": "*"
  },
  "suggests": {
    "nochatreports": "*"
  },
  "breaks": {
    "morechathistory": "*"
  }
}